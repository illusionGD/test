{
    "compileOnSave": true,
    "compilerOptions": {
        "experimentalDecorators": true,
        "jsxImportSource": "preact",
        "isolatedModules": true,
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "@/*": ["./src/*"],
            "~/*": ["./src/*"]
        },
        "types": [
            "@types/jquery",
            "@types/node",
            "@types/swiper",
            "@types/dom-inputevent"
        ],
        "typeRoots": ["./@types"]
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*", "@types"]
}
